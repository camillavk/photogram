<%= form_tag post_charges_path do %>
  <article>
    <label class='amount'>
      <span>Amount: <%= post_price(@post) %></span>
    </label>
  </article>

  <script src='https://checkout.stripe.com/checkout.js' class='stripe-button'
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Payment for picture"
          data-amount="<%= (@post.price * 100).to_i %>"></script>
<% end %>
