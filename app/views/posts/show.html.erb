<section id='image'>
      <section class='image'>
        <%= image_tag @post.image.url(:medium) %>
      </section>
    <div class='panel-panel-info'>
      <div class='banel-body'>
        <section id='caption'>
          <%= @post.caption %>
        </section>
      </div>
    </div>
</section>

<section id='comments'>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Comments:</h3>
    </div>
    <div class="panel-body">
      <% if @post.comments.any? %>
        <ul>
          <% @post.comments.each do |comment| %>
            <li class='comment'>
              <%= comment.comment %>
              <span class='likes_count'><%= comment.likes.count %></span> likes
              <%= link_to "Like", comment_likes_path(comment), class: 'likes_link' %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <h3>No comments yet</h3>
      <% end %>
      <%= link_to "Comment on #{@post.caption}", new_post_comment_path(@post) %>
    </div>
  </div>
</section>
